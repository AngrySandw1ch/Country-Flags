<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity">

   <LinearLayout
       android:id="@+id/austria"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/poland">
       <TextView
           android:layout_width="100dp"
           android:layout_height="30dp"
           android:background="#FF0000"/>
       <TextView
           android:layout_width="100dp"
           android:layout_height="30dp"
           android:background="@color/white"/>
       <TextView
           android:layout_width="100dp"
           android:layout_height="30dp"
           android:background="#FF0000"/>
   </LinearLayout>

    <LinearLayout
        android:id="@+id/poland"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/austria"
        app:layout_constraintEnd_toStartOf="@id/italy">
        <TextView
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@color/white"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="#FF0000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/italy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/poland"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="35dp"
            android:layout_height="90dp"
            android:background="#DA0BAF06"/>
        <TextView
            android:layout_width="35dp"
            android:layout_height="90dp"
            android:background="@color/white"/>
        <TextView
            android:layout_width="35dp"
            android:layout_height="90dp"
            android:background="#FF0000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/columbia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/austria"
        app:layout_constraintEnd_toStartOf="@id/madagascar">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#FCF39A02"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="#19158E"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="#B10808"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/madagascar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/columbia"
        app:layout_constraintTop_toBottomOf="@id/poland"
        app:layout_constraintEnd_toStartOf="@id/thailand">
        <TextView
            android:id="@+id/white_part"
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/red_part"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/red_part"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:background="#ED2F2F"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/white_part"
            app:layout_constraintBottom_toTopOf="@id/green_part"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/green_part"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:background="#028308"
            app:layout_constraintStart_toEndOf="@id/white_part"
            app:layout_constraintTop_toBottomOf="@id/red_part"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/thailand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/italy"
        app:layout_constraintStart_toEndOf="@id/madagascar"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:background="#830E0E"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:background="@color/white"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="#1F2751"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:background="@color/white"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="17dp"
            android:background="#830E0E"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/denmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/columbia"
        app:layout_constraintEnd_toStartOf="@id/switzerland">
        <TextView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:background="#B10808"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:background="@color/white"
            android:layout_gravity="center"/>
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="10dp"
            android:layout_height="90dp"
            android:background="@color/white"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/switzerland"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/denmark"
        app:layout_constraintTop_toBottomOf="@id/madagascar"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:background="#B10808"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@color/white"
            android:layout_gravity="center"/>
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>